{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/_next/(.*)", "dest": "/_next/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-api-url.com"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
